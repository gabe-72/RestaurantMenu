html
  head
    meta(charset="utf-8")
    link(rel="stylesheet" href="/css/order.css")
    link(rel="stylesheet" href="/css/input.css")
    title User
  body(onload="init()")
    include ../partial/header.pug
    .main.la
      h1 User Info
      | Username: #{u.username}
      br
      if user.loggedin && user.userid.equals(u._id)
        | Privacy: #{u.privacy?"Private":"Public"} 
        button#changePrivacy Change Status
        br
      if u.orderHistory.length > 0
        h2.underline Order History
        each orderID in u.orderHistory
          a(href="/orders/"+orderID) #{orderID}
          br
    script(src="/js/user.js")